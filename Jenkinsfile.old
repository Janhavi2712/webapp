pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  stages {
    stage ('Initialize') {
      steps {
        sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
            ''' 
      }
    }
   stage ('Build') {
      steps {
      sh 'mvn clean package'
    }
   }
  stage ('Deplpoy to Tomcat') {
      steps {
      sshagent (['tomcat']) {
        sh 'scp -o StrictHostKeyChecking=no target/*.war ubuntu@65.1.94.119:/prod/apache-tomcat-8.5.98/webapps/webapp.war'
      }
    }
   }
  }
}
  
    
    
   
